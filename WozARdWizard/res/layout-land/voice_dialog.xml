<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent" />

    <Button
        android:id="@+id/currentLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:text="Current Location"
        android:textSize="30dp" />

    <Button
        android:id="@+id/showSMSButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:layout_toRightOf="@+id/currentLocationButton"
        android:text="Show SMS"
        android:textSize="30dp" />

    <Button
        android:id="@+id/startCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentLocationButton"
        android:text="Start Camera"
        android:textSize="30dp" />

    <Button
        android:id="@+id/takePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentLocationButton"
        android:layout_toRightOf="@+id/startCameraButton"
        android:text="Take a Photo"
        android:textSize="30dp" />
    
    <TextView 
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/startCameraButton"
        android:layout_centerInParent="true"
        android:background="@color/green"
        android:text="test"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoText"
        android:layout_centerInParent="true"
        android:layout_marginTop="13dp"
        android:text="Cancel"
        android:textSize="30dp" />

</RelativeLayout>