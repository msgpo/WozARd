<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smsRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/preSMSLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal" 
        android:visibility="invisible">

        <TextView
            android:id="@+id/preSMSMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pre_next_shape"
            android:padding="8dip"
            android:textColor="#942B2B"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/smsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal" 
        android:visibility="invisible">

        <ImageView
            android:id="@+id/smsIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/smsMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/notification_shape"
            android:padding="8dip"
            android:textColor="#E73636"
            android:textSize="22dp" />

    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/nextSMSLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal" 
        android:visibility="invisible">


        <TextView
            android:id="@+id/nextSMSMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/pre_next_shape"
            android:padding="3dip"
            android:text="test"
            android:textColor="#942B2B"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>